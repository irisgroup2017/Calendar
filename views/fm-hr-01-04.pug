extends layout

block content
 mixin scss(scss)
  for t in scss
   link(rel='stylesheet' , href='../css/'+t)
 mixin ssrc(scr)
  for t in scr
   script(src="../js/"+t)
 .container
  .row
   h2.center=parms.formname
   .form-style-5
    fieldset
     legend
      span.number 1
      ="ขอมูลการร้องขอ"
     input#depart(type="text" placeholder="ตำแหน่งงาน")
     input#volumn(type="number" placeholder="จำนวน (อัตรา)")
     input#cost(type="number" placeholder="งบประมาณ")
    fieldset
     legend
      span.number 2
      ="รายละเอียดแผนอัตรากำลังคน"
    .b-submit-form.center บันทึกฟอร์ม
block footer
 +scss(['form.css','datatable/datatables.min.css'])
 +ssrc(['datatables.min.js'])
 script.
