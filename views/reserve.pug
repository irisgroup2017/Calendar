extends layout
mixin timelist()
 -var i = 1
 -var c = 6
 while (i <= 28)
  if i%2 == 0
   td.reserve.time=c +".00"
   -var i = i+1
   -var c = c+1
  else if i == 1
   td.reserve.name(colspan=2)
    .d-flex.justify-content-between.align-items-center
     .p-2 รายชื่อรถยนต์
     .p-2 ยอดคงเหลือบัตรผ่านทางพิเศษ
   -var i = i+1
  else
   td.reserve.half
   -var i = i+1
mixin linetd()
 -var i = 1
 -var c = 6
 while (i <= 28)
  if (i++ <= 1)
   td.reserve-car(colspan=2)
  else
   td.reserve-line
    .reserve-timeline
    if i%2 == 0
     i.fa.fa-circle.reserve-halfdot
    else
     i.fa.fa-dot-circle-o.reserve-fulldot
mixin bodyfill(car,reserve,easypass)
 -var a = ["March ฎศ-475","March ฎศ-745","VIOS 7กล-3404","Avanza 2กถ-6841"]
 -var i = 0
 -var id
 for v in a
  -var key = i
  -id = car[i++]
  if id == undefined
   tr.reserve-row(data-carid=key)
    +nulltd(v,null,null,easypass)
  else
   tr.reserve-row(data-carid=key)
    +nulltd(v,id,reserve,easypass)

mixin nulltd(car,list,data,easypass)
 -var i = 0
 -var c = 6
 -var first = []
 -var last = []
 -var middle
 -var plate = car.split("-")[1]
 if list == null
  while (i++ < 28)
   if (i == 1)
    td.reserve-car(colspan=2)
     .d-flex.align-items-center.flex-nowrap.justify-content-between
      span.car-color(data-color=plate)=car
      .p-2=easypass[plate] +' บาท'
   else 
    td
 else
  for id in list
   -first[id] = data[id].dayres[0]
   -last[id] = data[id].dayres[1]
   -plate = data[id].plate.code
  while (i++ < 28)
   if i == 1
    td.reserve-car(colspan=2)
     .d-flex.align-items-center.flex-nowrap.justify-content-between
      span.car-color(data-color=plate)=car
      .p-2=easypass[plate] +' บาท'
   else
    if first.includes(i) && last.includes(i)
     td.reserve-time-both
      .timeline-last(data-color=plate)
      .timeline-first(data-color=plate)
    else if last.includes(i)
     -middle = false
     td.reserve-time-last
      .timeline-last(data-color=plate)
    else if first.includes(i)
     -middle = true
     td.reserve-time-first
      .timeline-first(data-color=plate)
    else if middle
     td.reserve-time
      .timeline-middle(data-color=plate)
    else 
     td
