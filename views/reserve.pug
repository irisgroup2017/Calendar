extends layout
mixin timelist()
 -var i = 1
 -var c = 6
 while (i <= 30)
  if i%2 == 0
   td.reserve.time=c +".00"
   -var i = i+1
   -var c = c+1
  else if i == 1
   td.reserve.name
   -var i = i+1
  else
   td.reserve.half=i
   -var i = i+1

block script
 +ssrc(['jquery-ui.custom.min.js','clockpicker.min.js','jquery.ui.touch-punch.min.js','moment.min.js','bootbox.min.js','fullcalendar.min.js','reserve.js','bootstrap-datepicker.min.js','th.js','daterangepicker.min.js'])
 +scss(['animate.min.css','clockpicker.min.css','bootstrap-datepicker.min.css','calendartooltip.css','daterangepicker.css'])
 link(rel='stylesheet' , href='css/bootstrap-datepicker.min.css')

