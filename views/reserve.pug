extends layout
mixin timelist()
 -var i = 1
 -var c = 6
 while (i <= 28)
  if i%2 == 0
   td.reserve.time=c +".00"
   -var i = i+1
   -var c = c+1
  else if i == 1
   td.reserve.name(colspan=2) รายชื่อรถยนต์
   -var i = i+1
  else
   td.reserve.half
   -var i = i+1
mixin linetd()
 -var i = 1
 -var c = 6
 while (i <= 28)
  if (i++ <= 1)
   td.reserve-car(colspan=2)
  else
   td.reserve-line
    .reserve-timeline
    if i%2 == 0
     i.fa.fa-circle.reserve-halfdot
    else
     i.fa.fa-dot-circle-o.reserve-fulldot
mixin bodyfill()
 -var a = ["March ฎศ-475","March ฎศ-745","Avanza 2กถ-6841","VIOS 7กล-3404"]
 -var b = [4,13]
 for c in a
  tr
   +nulltd(c,b)

mixin nulltd(a,b)
 -var i = 1
 -var c = 6
 while (i <= 28)
  if (i++ <= 1)
   td.reserve-car(colspan=2)=a
  else
   if b[0] == i
    td.reserve-time-first
     .timeline-first
   else if b[1] == i
    td.reserve-time-last
     .timeline-last
   else if (b[0] < i && i < b[1])
    td.reserve-time
     .timeline-middle
   else
    td
