extends layout

block content
 mixin tbl(line)
  -var i = 0
  while i < line
   tr(id=parms.objs[i].id class=parms.objs[i].aclass)
    td=parms.objs[i].cTime
    td=parms.objs[i].lartype
    td=parms.objs[i].title
    td=parms.objs[i].dateStart
    td=parms.objs[i].dateEnd
    td=(parms.objs[i].timeEnd ? parms.objs[i].timeStart+'-'+parms.objs[i].timeEnd : parms.objs[i].timeStart)
    td=parms.objs[i].daylength
    td=parms.objs[i].larstatus
    td=parms.objs[i++].approver
    td
     a.delete.fa.fa-trash.hvr-pulse(title="หากหัวหน้ายังไม่ได้อนุมัติจะลบการลานี้ออกจากรายการ\nหากหัวหน้าอนุมัติแล้วจะทำเครื่องหมายยกเลิกการลาแต่ยังคงเก็บข้อมูลไว้ในระบบต่อไป" data-toggle="confirmation" data-placement="left" style="padding-left: 10px")
    td.center
     a.resend-mail.fa.fa-repeat.hvr-pulse(title="ส่งอีเมลให้หัวหน้าอีกครั้ง\nใช้ในกรณีที่เปลี่ยนแปลงผู้บังคับบัญชาหรือผู้บังคับบัญชาค้นหาอีเมลไม่พบ")
 mixin ddl(namel)
  -var i = 0
   while i < namel
    -var cal = namel-(i+1)
    if parms.objs[i].me
     a.dropdown-item.thisme(onload="setMyName()" href="#")=parms.objs[i++].userName
    else
     a.dropdown-item(href="#")=parms.objs[i++].userName
    if cal
     .dropdown-divider
 
