 script.
  jQuery(function($) {
    let larid = '',status = ''
    $(document).on("click", ".resend-mail", function(){
     larid = $(this).parents('tr').attr('id')
     $.ajax({
      url: '/leavelist/resend',
      type: "POST",
      async: false,
      data: { 
       'larid': larid
      },
      success: function(data) {
       alert('ส่งอีเมลให้ผู้บังคับบัญชาเรียบร้อยแล้ว')
      }
     })
    })
    $(document).on("click", ".delete", function(){
        larid = $(this).parents('tr').attr('id')
        status = ($(this).parents('tr').find('td:nth-child(8)').text().indexOf(':') > 0 ? $(this).parents('tr').find('td:nth-child(8)').text().split(':') : $(this).parents('tr').find('td:nth-child(8)').text())
        $.confirm({
            title: 'ลบข้อมูลการลา',
            content: 'ยืนยันการลบข้อมูลการลาวันที่ '+ $(this).parents('tr').find('td:nth-child(4)').text(),
            theme: 'bootstrap',
            closeIcon: true,
            animation: 'scale',
            type: 'red',
            buttons: {
                confirm: function() {
                    if (status == 'รออนุมัติ') {
                        $.ajax({
                            url: '/leavelist',
                            type: "POST",
                            dataType: 'json',
                            async: false,
                            data: { 
                                'state': 'delete',
                                'larid': larid
                            },
                            success: function(data) {
                                $('tr[id='+data.larid+']').remove()
                            }
                        })
                    } else if (status[0] == 'อนุมัติ') {
                        $.ajax({
                            url: '/leavelist',
                            type: "POST",
                            dataType: 'json',
                            async: false,
                            data: { 
                                'state': 'delkeep',
                                'larid': larid
                            },
                            success: function(data) {
                                $('tr[id='+data.larid+']').attr('class','strikeout')
                            }
                        })
                    }
                    else {
                        $.ajax({
                            url: '/leavelist',
                            type: "POST",
                            dataType: 'json',
                            async: false,
                            data: { 
                                'state': 'hrprove',
                                'larid': larid
                            },
                            success: function(data) {
                                $('tr[id='+data.larid+']').attr('class','bg-warning')
                            }
                        })
                    }
                },
                cancel: function() {
                    $.alert('ยกเลิกการลบข้อมูลการลา')
                }
            }
        })
     })
  })
