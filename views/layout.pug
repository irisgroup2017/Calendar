 -var menul = [[0,[6,7],1,[8,25,22,24],2,[12,26],5,[13]],[0,[6,7],1,[8,25,22,24],2,[12,26],5,[13]],[0,[6,7],1,[8,25,22,24],2,[12,26],3,[9],5,[13]],[0,[6,7],1,[8,25,22,23,24],2,[12,26,21],3,[9,10,15],4,[18,19],5,[13,16,17,20]],[0,[6,7],1,[8,25,22,23,24],2,[12,26,21],3,[9,10,15],4,[18,19],5,[13,16,17,20]]]
 -var menun = {'0':0,'1':1,'2':2,'3':3,'4':4}
 -var navmenu = menul[menun[menu]]
 -var n = 0
 each t in navmenu
  if t.length == undefined
   -var item = menui[t]
   -n++
   li.menu-item
    a(href="#")=item[0]
    if navmenu[n].length > 0
     ol.sub-menu
      each item in navmenu[n]
       -var subitem = menui[item]
       li.menu-item
        a(href=subitem[0])=subitem[1]
     -n++
